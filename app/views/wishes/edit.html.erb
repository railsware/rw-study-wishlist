<div class="row">
  <div class="col1of2">
    <div class="WishNewImage"></div>
  </div>
  <div class="col1of2">
    <div class="form">
      <%=  form_for @wish, :url => {:action => "update"} do |f| %>
          <div class="mbs"><label>Название:</label><%= f.text_field :name %><!--<span id="error_name"></span>--><br></div>
          <div class="mbs"><label>Хочу на ... (1-5)</label><%= f.text_field :rating, :value => @wish.rating  %><!--<span id="error_rating"></span>--><br></div>
          <div class="mbs"><label>URL</label><%=  f.text_field :url %><!--<span id="error_url"></span>--><br></div>
          <div class="mbs"><label>Описание</label><%=  f.text_area :description %><br></div>
          <%=  f.submit "", :id => "submit", :class => "submit", :isEdit => true %>
          <%= link_to "Удалить", wish_path(@wish), :method => :delete %>
          <%= f.hidden_field :owner_id, :value => current_user.id %>
          <%=  f.file_field :image, :class => "download" %><!--<span id="error_url"></span>-->
     </div>
   </div>
</div>
<% end %>











