<div class="row">
  <div class="col1of2">
    <div class="WishNewImage">
      <%= image_tag("no-image.jpeg", :border => 0) %>
    </div>
   </div>
  <div class="col1of2">
    <h2 style="background-color: #ff0000; " ><%= flash[:error] %> </h2>
    <div class="form">
     <%=  form_for @wish, :url => {:action => "create"} do |f| %>
      <div class="mbs"><label>Название:</label><%= f.text_field :name, :value => @search_name.to_s %><!--<span id="error_name"></span>--><br></div>
          <div class="mbs"><label>Изображение:</label><%= f.file_field :image %><br></div>
      <div class="mbs"><label>Хочу на ... </label><div class="stars">
        <%= f.radio_button :rating, "1", :class => "star", :checked => "checked" %>
        <%= f.radio_button :rating, "2", :class => "star" %>
        <%= f.radio_button :rating, "3", :class => "star" %>
        <%= f.radio_button :rating, "4", :class => "star" %>
        <%= f.radio_button :rating, "5", :class => "star" %></div>
      <!--<span id="error_rating"></span>--><br></div>
      <div class="mbs"><label>URL</label><%=  f.text_field :url, :value => @search_url.to_s %><!--<span id="error_url"></span>--><br></div>
      <div class="mbs"><label>Описание</label><%=  f.text_area :description %><br></div>
      <%=  f.submit :value => "", :id => "submit", :class => "submit" %>
      <%= link_to "Отмена", search_path, :class => "cancel" %>
      <%= f.hidden_field :owner_id, :value => current_user.id %><!--<span id="error_url"></span>-->
    </div>
  </div>
</div>

<% end %>
