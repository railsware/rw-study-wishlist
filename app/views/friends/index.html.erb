<h1>Friends page</h1>
<p><%= link_to 'all', '#' %></p>
<p><%= link_to '1 week', :controller => 'friends', :action => 'bdate_in_1_week' %></p>
<p><%= link_to '2 weeks', :controller => 'friends', :action => 'bdate_in_2_weeks' %></p>
<p><%= link_to '1 month', :controller => 'friends', :action => 'bdate_in_1_month' %></p>
<p><%= link_to 'unknown', :controller => 'friends', :action => 'bdate_unknown' %></p>

</br>

<% if (@friends.size != 0)  %>
<% @friends.each do |f| %>
    <p>
    <%= link_to f.name, friend_path(f)  %>
    <%= image_tag f.avatar.url%>
    <% if f.is_user == true %>
      - is_user
    <% end %>  
    </p>
<% end %>
<% else %>
    <p>Your friendlist is empty</p>
<% end %>


